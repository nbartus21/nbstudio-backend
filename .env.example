# SMTP Beállítások
SMTP_HOST=nb-hosting.hu
SMTP_PORT=25
SMTP_SECURE=false
SMTP_USER=noreply@nb-hosting.hu
SMTP_PASS=your-smtp-password

# Kontakt email SMTP beállítások - ugyanazt a szervert használva
CONTACT_SMTP_HOST=nb-hosting.hu
CONTACT_SMTP_PORT=25
CONTACT_SMTP_SECURE=false
CONTACT_SMTP_USER=kontakt@nb-studio.net
CONTACT_SMTP_PASS=your-smtp-password

FACEBOOK_APP_ID=your-facebook-app-id
FACEBOOK_APP_SECRET=your-facebook-app-secret

# Általános beállítások
FRONTEND_URL=http://localhost:5173
MONGO_URI=mongodb://username:password@localhost:27017
PORT=5001

# API és biztonság
STRIPE_SECRET_KEY=your-stripe-secret-key
JWT_SECRET=your-jwt-secret

# Admin hozzáférés
ADMIN_EMAIL=admin@example.com
ADMIN_PASSWORD=your-admin-password
PUBLIC_API_KEY=your-public-api-key
MONITOR_API_KEY=your-monitor-api-key

# Email webhook API kulcs (ugyanaz mint a PUBLIC_API_KEY)
EMAIL_WEBHOOK_API_KEY=your-email-webhook-api-key

# Document Management System Settings
VITE_API_URL=http://localhost:5001

# Document Storage Configuration
DOCUMENT_STORAGE_PATH=./uploads/documents
MAX_UPLOAD_SIZE=10485760  # 10MB in bytes
ALLOWED_DOCUMENT_TYPES=pdf,docx,xlsx,pptx,txt,jpg,png

# Document Security Settings
PIN_SALT=your-pin-salt-here
DOCUMENT_ENCRYPTION_KEY=your-encryption-key-here

# Cloud Storage (if applicable)
S3_BUCKET_NAME=your-document-bucket
S3_ACCESS_KEY=your-access-key
S3_SECRET_KEY=your-secret-key
S3_REGION=eu-central-1

# Document Management API Settings
DOCUMENT_API_VERSION=v1
PDF_GENERATION_TIMEOUT=30000  # 30 seconds in milliseconds
DEFAULT_DOCUMENT_LANGUAGE=hu  # Default language for documents (hu, en, de)